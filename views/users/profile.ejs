<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

        <div class="page-header text-center">
            <h1><span class="fa fa-anchor"></span> Welcome <%= currentUser.local.email%></h1>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>
        <!-- Local Information -->

        <ul class="list-group"> Your Classes
            <% for(var i = 0; i < classes.length; i ++) { %>
                <li class = "list-group-item"><a href = "#!"><%= classes[i] %></a></li>
            <% } %>
        </ul>

        <a href = "/classes/create"><button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-plus"></span> Add a Class
        </button></a>

    </div>
</div>
</body>
</html>